{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MECEFramework",
  "type": "object",
  "properties": {
    "topic": { "type": "string" },
    "audience": { "type": "string" },
    "scope": { "type": "string" },
    "depth": { "type": "integer", "enum": [1, 2, 3] },
    "depth_label": { "type": "string", "enum": ["light", "standard", "deep"] },
    "categories": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "definition": { "type": "string" },
          "subcategories": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "purpose": { "type": "string" }
              },
              "required": ["name", "purpose"]
            }
          }
        },
        "required": ["name", "definition", "subcategories"]
      }
    },
    "distinctness_notes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "vs": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 2,
            "maxItems": 2
          },
          "reason": { "type": "string" }
        },
        "required": ["vs", "reason"]
      }
    },
    "coverage_checklist": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "aspect": { "type": "string" },
          "category": { "type": "string" }
        },
        "required": ["aspect", "category"]
      }
    },
    "edge_cases": { "type": "array", "items": { "type": "string" } },
    "mece_confirmation": {
      "type": "object",
      "properties": {
        "mutually_exclusive_because": { "type": "string" },
        "collectively_exhaustive_because": { "type": "string" }
      },
      "required": ["mutually_exclusive_because", "collectively_exhaustive_because"]
    },
    "stats": {
      "type": "object",
      "description": "Optional quick QA signals",
      "properties": {
        "overlap_issues_found": { "type": "integer", "minimum": 0 },
        "coverage_gaps_found": { "type": "integer", "minimum": 0 }
      }
    }
  },
  "required": ["topic", "categories", "mece_confirmation"]
}
